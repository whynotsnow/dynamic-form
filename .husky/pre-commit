#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# 颜色定义
GREEN="\033[32m"
RED="\033[31m"
YELLOW="\033[33m"
RESET="\033[0m"

echo "${YELLOW}⚡ Running lint-staged...${RESET}"

if npx lint-staged; then
  echo "${GREEN}✅ lint-staged finished successfully!${RESET}"
else
  echo "${RED}❌ lint-staged failed! Commit aborted.${RESET}"
  exit 1
fi
